# aclarai UI Service Environment Configuration
# Copy this file to .env and modify values as needed

# === Vault Paths Configuration ===
# Path to tier1 vault directory for imported files
aclarai_TIER1_PATH=vault/tier1

# Path to summaries directory
aclarai_SUMMARIES_PATH=vault

# Path to concepts directory  
aclarai_CONCEPTS_PATH=vault

# Path to import logs directory
aclarai_LOGS_PATH=.aclarai/import_logs

# === UI Server Configuration ===
# Host address for the Gradio server (0.0.0.0 allows external connections)
aclarai_UI_HOST=0.0.0.0

# Port for the Gradio server (7860 is Gradio's default)
aclarai_UI_PORT=7860

# Enable debug mode (true/false)
aclarai_UI_DEBUG=false